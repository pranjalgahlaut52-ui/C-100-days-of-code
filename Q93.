question-Find the first repeating lowercase alphabet in a string.
answer-#include <stdio.h>

int main() {
    char str[1000];
    int freq[26] = {0}; // To store frequency of each lowercase alphabet

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin); // Read string with spaces

    int firstRepeatIndex = -1;

    for (int i = 0; str[i] != '\0' && str[i] != '\n'; i++) {
        char ch = str[i];
        if (ch >= 'a' && ch <= 'z') { // Only lowercase letters
            freq[ch - 'a']++;         // Increment frequency
            if (freq[ch - 'a'] == 2) {
                firstRepeatIndex = i;
                break; // Stop at first repeating character
            }
        }
    }

    if (firstRepeatIndex != -1) {
        printf("First repeating lowercase alphabet: %c\n", str[firstRepeatIndex]);
    } else {
        printf("No repeating lowercase alphabet found.\n");
    }

    return 0;
}
